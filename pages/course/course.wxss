/* pages/course/course.wxss */


/**index.wxss**/
.adContainer {
  width: 95%;
  margin-bottom: 20rpx;
}
.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-col {
    display: flex;
    flex-direction: column;
}

.index_body {
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
    align-content: center;
    align-items: center;
    height: auto;
}

.index_body_in {
    display: flex;
    flex-direction: column;
    width: 640rpx;
    box-sizing: border-box;
}

.index_box {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-top: 23rpx;
    padding-bottom: 65rpx;
}

.card {
    display: block;
    width: 100%;
    background-color: white;
    height: 185rpx;
    border-radius: 15rpx;
    /* padding: 20rpx; */
}

.img_box {
    width: 144rpx;
    height: 144rpx;
    /* background-color: gold; */
    margin: 20rpx 40rpx;
}

.right_title {
    padding: 5rpx 40rpx 5rpx 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: auto;
    height: 144rpx;
    margin: 20rpx 0rpx;
    box-sizing: border-box;
}

.circle {
    margin: 10rpx 10rpx 10rpx 0rpx;
    width: 24rpx;
    height: 24rpx;
    background-color: red;
    border-radius: 50%;
}

.weekBTN {
    position: absolute;
    top: 80rpx;
    right: 28rpx;
    width: 256rpx;
    height: 66rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.header-text {
    font-size: 32rpx;
    font-weight: 200;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    letter-spacing: 5rpx;
}

.BTN_img {
    margin: 8rpx;
    height: 48rpx;
    width: 48rpx;
}

.main_header {
    display: flex;
    /* flex-direction: column;
    align-items: flex-start; */
    align-items: center;
    justify-content: center;
    width: 700rpx;
    height: 100rpx;
}

.main_table {
    width: 700rpx;
    height: 928rpx;
    flex-direction: column;
}

.hr {
    display: flex;
    flex-direction: row;
    width: 700rpx;
    height: 60rpx;
    /* padding: 5rpx; */
}

.days {
    display: flex;
    margin-left: 56rpx;
    margin-right: 6rpx;
    flex-direction: row;
    align-items: flex-end;
}

.day {
    width: 84rpx;
    height: 60rpx;
    margin-left: 6rpx;
    display: flex;
    flex-direction: column;
}

.day-text {
    justify-content: center;
    display: flex;
    vertical-align: top;
    font-size: 30rpx;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #0f0f0f;
}

.day-flag {
    display: block;
    width: 100%;
    height: 30rpx;
    justify-content: center;
}

.today-blk {
    width: 80rpx;
    height: 20rpx;
    background-color: #1989FA;
}

.tab-right {
    width: 56rpx;
    height: 860rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 5rpx 0rpx;
}

.tab-body {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
}

.tab-right-li {
    width: 38rpx;
    height: 152rpx;
    border-radius: 20rpx;
    display: flex;
    padding: 15rpx 0rpx;
    text-align: center;
    flex-direction: column;
    vertical-align: center;
    justify-content: space-between;
    box-sizing: border-box;
    font-size: 20rpx;
    background-color: #f2f2f2;
    color: #858585;
    margin-right: 18rpx;
}

.tab-left {
    width: 644rpx;
    height: 868rpx;
    position: relative;
    border-radius: 10rpx;
}

.tab-left-day {
    width: 90rpx;
    height: 868rpx;
}

.tab-left-day-li {
    position: absolute;
    width: 84rpx;
    background-color: #f2f2f2;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
}

.text-light {
    font-weight: 100;
    font-size: 12rpx;
    font-weight: 300;
    letter-spacing: 4rpx;
}

.text-mirco {
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 15rpx;
    font-weight: 300;
    letter-spacing: 4rpx;
    color: #f2f2f2;
}